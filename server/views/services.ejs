<%- include partials/header.ejs %>

<%- include partials/main_nav.ejs %>
  
  <!-- Main Content -->
  <main class="container">
    <div class="jumbotron">
      <h1 class="display-4"><%= title %></h1>
      <!-- List of Services in Carousel autoplay -->
      <div id="carouselAutoplaying" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <div class="carousel-caption d-none d-md-block mx-auto">
              <h2 class="display-6">AI Integration</h2>
              <p class="carousel-tagline">Catching up with the latest trend in AI leverages your business to the next level</p>
            </div>
            <img src="./assets/images/services1.jpg" class="d-block w-100" alt="AI Integration">
          </div>
          <div class="carousel-item">
            <div class="carousel-caption d-none d-md-block">
              <h2 class="display-6">Software Design</h2>
              <p class="carousel-tagline">Lay an excellent foundation boost the operational efficiency of your business</p>
            </div>
            <img src="./assets/images/services2.jpg" class="d-block w-100" alt="Software Design">
          </div>
          <div class="carousel-item">
            <div class="carousel-caption d-none d-md-block">
              <h2 class="display-6">Quality Management</h2>
              <p class="carousel-tagline">Customers love quality work and I am here to help</p>
            </div>
            <img src="./assets/images/services3.jpg" class="d-block w-100" alt="Quality Management">
          </div>
          <div class="carousel-item">
            <div class="carousel-caption d-none d-md-block">
              <h2 class="display-6">IT Consultancy</h2>
              <p class="carousel-tagline">The experience from various industry brings the synergy to you</p>
            </div>
            <img src="./assets/images/services4.jpg" class="d-block w-100" alt="IT Consultancy">
          </div>
          <div class="carousel-item">
            <div class="carousel-caption d-none d-md-block">
              <h2 class="display-6">App Development</h2>
              <p class="carousel-tagline">Delivering working software will always be one of our focus</p>
            </div>
            <img src="./assets/images/services5.jpg" class="d-block w-100" alt="App Development"> 
          </div>
        </div>
        <!-- Carousel control buttons -->
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselAutoplaying" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselAutoplaying" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
  </main>

<%- include partials/bottom_nav.ejs %>  

